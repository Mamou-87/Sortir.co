{% extends 'base.html.twig' %}

{% block title %}New Place{% endblock %}

{% block body %}
<div class="col-4 pb-5 pt-3 mx-auto">
    <h1 class="mb-4 font-weight-normal text-center">Create new Place</h1>

    {{ form_start(form) }}
    {{ form_widget(form.name) }}
    {{ form_widget(form.address) }}
    {{ form_widget(form.latitude) }}
    {{ form_widget(form.longitude) }}
    <select name="city" class="custom-select m-1">
            <option value="">-- Choose a city --</option>
            {% for city in cities %}
                <option value="{{ city.id }}">{{city.name}}</option>
            {% endfor %}
    </select>
    <a class="ml-2" href="{{ url('city_new') }}">Add a new city</a>
    <div class="mt-3 mx-auto d-flex justify-content-center">
        <button type="submit" class="btn btn-warning mx-1" >Save</button>
        <a  class="btn btn-warning mx-1" href="{{ path('place_index') }}">back to list</a>

        {{ form_end(form) }}

{% endblock %}