{% extends 'base.html.twig' %}

{% block title %}Place{% endblock %}

{% block body %}
<div class="col-6 py-4 mx-auto text-center">
    <div class="mb-4">
            <h1 class="h2 mb-5 font-weight-normal text-center">Place</h1>
                <table class="table table-hover">
                    <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ place.id }}</td>
                        </tr>
                        <tr>
                            <th>Name</th>
                            <td>{{ place.name }}</td>
                        </tr>
                        <tr>
                            <th>Address</th>
                            <td>{{ place.address }}</td>
                        </tr>
                        <tr>
                            <th>Latitude</th>
                            <td>{{ place.latitude }}</td>
                        </tr>
                        <tr>
                            <th>Longitude</th>
                            <td>{{ place.longitude }}</td>
                        </tr>
                        <tr>
                            <th>City</th>
                            <td>{{ place.city.name }} ({{ place.city.postalCode }})</td>
                        </tr>
                    </tbody>
                </table>
                <div class="mt-3 mx-auto d-flex justify-content-center">
                <a class="btn btn-warning mx-1" href="{{ path('place_index') }}">back to list</a>

                <a class="btn btn-warning mx-1" href="{{ path('place_edit', {'id': place.id}) }}">edit</a>

                {{ include('place/_delete_form.html.twig') }}
                </div>
    </div>
</div>
{% endblock %}
