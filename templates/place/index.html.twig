{% extends 'base.html.twig' %}

{% block title %}Place index{% endblock %}

{% block body %}
<div class="col-9 py-4 mx-auto text-center">
    <div class="mb-4">
        <h1 class="mb-3">All places</h1>
        <a class="btn btn-warning mb-3" href="{{ path('place_new') }}">Add</a>
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Address</th>
                    <th scope="col">Latitude</th>
                    <th scope="col">Longitude</th>
                    <th scope="col">actions</th>
                </tr>
                </thead>
                <tbody>
                {% for place in places %}
                    <tr>
                        <td>{{ place.name }}</td>
                        <td>{{ place.address }}</td>
                        <td>{{ place.latitude }}</td>
                        <td>{{ place.longitude }}</td>
                        <td>
                            <a class="col-4 link-border" href="{{ path('place_show', {'id': place.id}) }}">Show</a>
                            <hr class="my-2">
                            <a class="col-4" href="{{ path('place_edit', {'id': place.id}) }}">Edit</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6">No places found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}
