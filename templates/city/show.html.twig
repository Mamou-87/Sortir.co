{% extends 'base.html.twig' %}

{% block title %}City{% endblock %}

{% block body %}
<div class="col-6 py-4 mx-auto text-center">
    <div class="mb-4">
        <h1 class="h2 mb-5 font-weight-normal text-center">City</h1>
            <table class="table table-hover">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ city.id }}</td>
                    </tr>
                    <tr>
                        <th>Name</th>
                        <td>{{ city.name }}</td>
                    </tr>
                    <tr>
                        <th>PostalCode</th>
                        <td>{{ city.postalCode }}</td>
                    </tr>
                </tbody>
            </table>
            <div class="mt-3 mx-auto d-flex justify-content-center">
            <a  class="btn btn-warning mx-1" href="{{ path('city_index') }}">back to list</a>

            <a  class="btn btn-warning mx-1" href="{{ path('city_edit', {'id': city.id}) }}">edit</a>

            <form method="post" action="{{ path('city_delete', {'id': city.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ city.id) }}">
                <button class="btn btn-warning mx-1">Delete</button>
            </form>
        </div>
    </div>
</div>

{% endblock %}
