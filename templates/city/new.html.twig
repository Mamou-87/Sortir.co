{% extends 'base.html.twig' %}

{% block title %}New City{% endblock %}

{% block body %}
<div class="col-4 pb-5 pt-3 mx-auto">
        <h1 class="mb-4 font-weight-normal text-center">Create new City</h1>

        {{ form_start(form) }}
        {{ form_widget(form.name) }}
        {{ form_widget(form.postalCode) }}
        <div class="mt-3 mx-auto d-flex justify-content-center">
                <button class="btn btn-warning mx-1">{{ button_label|default('Save') }}</button>
                <a class="btn btn-warning mx-1" href="{{ path('city_index') }}">back to list</a>
        </div>
        {{ form_end(form) }}
</div>

{% endblock %}
