{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}

<div class="col-6 py-5 mx-auto">

    <h1 class="h3 mb-4 font-weight-normal text-center">
        Reset your password
    </h1>

    {{ form_start(resetForm) }}

        {{ form_widget(resetForm.plainPassword.first,
            {'attr': {'class': 'form-control m-1', 'placeholder' : 'New password', 'type' : 'password', 'name' : 'password1' }}) }}
        <div class="text-danger">{{ form_errors(resetForm.plainPassword.first) }}</div>

        {{ form_widget(resetForm.plainPassword.second,
            {'attr': {'class': 'form-control m-1', 'placeholder' : 'Repeat password', 'type' : 'password', 'name' : 'password1' }}) }}
        <div class="text-danger">{{ form_errors(resetForm.plainPassword.second) }}</div>

        <div class="mt-5 mx-auto d-flex justify-content-center">
            <button class="btn btn-lg btn-warning mr-2">
                Reset password
            </button>
        </div>

    {{ form_end(resetForm) }}
</div>

{% endblock %}