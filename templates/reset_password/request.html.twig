{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}
    {% for flashError in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <div class="col-6 py-5 mx-auto">
        <h1 class="h3 mb-3 font-weight-normal">
            Reset your password
        </h1>

        {{ form_start(requestForm) }}
            {{ form_widget(requestForm.email,
                {'attr': {'class': 'form-control m-1', 'placeholder' : 'Email'}}) }}
            <div>
                <p class="text-primary text-center">
                    <i>
                        Enter your email address and we we will send you a link to reset your password.
                    </i>
                </p>
            </div>

        <div class="mt-5 mx-auto d-flex justify-content-center">
                <button class="btn btn-lg btn-warning mr-2">
                    Send password reset email
                </button>
        </div>

            {{ form_end(requestForm) }}

    </div>

{% endblock %}