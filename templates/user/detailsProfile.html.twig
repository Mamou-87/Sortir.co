{% extends 'base.html.twig' %}

{% block title %}Profile details{% endblock %}

{% block body %}
    <div class="col-4 py-5 mx-auto">
        <h1 class="h2 mb-5 font-weight-normal text-center">

            <strong>{{ user.username }}</strong>
        </h1>
        <table class="table">
            <tbody>
                <tr>
                    <th scope="row">Firstname</th>
                    <td>{{ user.firstname }}</td>
                </tr>
                <tr>
                    <th scope="row">Lastname</th>
                    <td>{{ user.lastname }}</td>
                </tr>
                <tr>
                    <th scope="row">Phone number</th>
                    <td>{{ user.phone }}</td>
                </tr>
                <tr>
                    <th scope="row">Email address</th>
                    <td>{{ user.email }}</td>
                </tr>
                <tr>
                    <th scope="row">Campus</th>
                    <td>{{ user.campus.name }}</td>
                </tr>
            </tbody>
        </table>
        <div class="row mt-5 d-flex justify-content-center">
            <div class="mr-2">
                <a href="{{ url("home_home") }}" class="btn btn-lg btn-warning">
                    Back to home
                </a>
            </div>
            <div class="ml-2">
                <a href="#" class="btn btn-lg btn-warning" id="button-send">
                    <img alt="logo" class="logo" src="{{ asset('img/send.png') }}">
                </a>
            </div>
        </div>






{% endblock %}