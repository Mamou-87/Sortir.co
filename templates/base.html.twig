        <link rel="stylesheet" href="{{ asset('css/style.css') }}">
        <link rel="stylesheet" href="{{ asset('css/style-menu.css') }}">
        <link rel="shortcut icon" type="image/x-icon" href="{{ asset('img/sortir-icon.png') }}">
        <title>Sortir.com | {% block title %}{% endblock %}</title>
    </head>
    <body>
    <header class="header-section d-lg-block">

        <nav class="navbar navbar-expand-lg navbar-dark py-0">
            <a class="navbar-brand" href="{{ url("home_home") }}">
                <img alt="logo" class="logo" src="{{ asset('img/sortir-logo.png') }}">
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01"
                    aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse">
                <div class="main-menu">
                    <nav class="row">
                        <ul>
                            <li class="has-dropdown">
                                <a class="active main-menu-link" href="{{ url("home_home") }}" id="menu">Home</a>
                            </li>
                            {% if app.user %}
                                <li class="has-dropdown">
                                    <a href="#">
                                        <img src="/images/users/{{ app.user.filename }}" alt="profilePic" id="picPlanner">
                                        My profile
                                        <i class="fa fa-angle-down"></i>
                                    </a>
                                    <ul class="sub-menu nolist-ul">
                                        <li><a href="{{ url("user_my_profile")}}">Update my profile</a></li>
                                        <li><a href="{{ url("app_logout") }}">Logout</a></li>
                                    </ul>
                                </li>
                                <li class="has-dropdown">
                                    <a href="#">Outings <i class="fa fa-angle-down"></i></a>
                                    <ul class="sub-menu nolist-ul">
                                        <li><a href="{{ url('outing_add') }}">Plan an outing</a></li>
                                        <li><a href="{{ url('outing_my_outings') }}">My outings</a></li>
                                    </ul>
                                </li>
                                <li class="has-dropdown">
                                    <a href="#">Admin <i class="fa fa-angle-down"></i></a>
                                    <ul class="sub-menu nolist-ul">
                                        <li><a href="#">Campus</a></li>
                                        <li><a href="#">Cities</a></li>
                                        <li><a href="{{ url("app_register") }}">New User</a></li>
                                    </ul>
                                </li>
                            {% else %}
                                <li class="has-dropdown">
                                    <a class="main-menu-link" href="{{ url('app_login') }}" id="menu">Login</a>
                                </li>

                                <li class="has-dropdown">
                                    <a href="#" class="p-1">
                                        <img src="{{ asset('img/maple-syrup.png') }}"
                                             onmouseover="this.src='{{ asset('img/maple-syrup2.png') }}';"
                                             onmouseout="this.src='{{ asset('img/maple-syrup.png') }}';"
                                             alt="mapple-syrup" height="50px">

                                        <i class="fa fa-angle-down"></i>
                                    </a>
                                    <ul class="sub-menu nolist-ul">
                                        <li>
                                            <a class="dropdown-item" href="https://www.voyagevoyage.ca/destinations/canada/raisons-canada-meilleur-pays-1.2126494">
                                                Why Canada ?
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" href="https://www.public.fr/News/Photos/Photos-50-stars-qui-sont-canadiennes-et-vous-ne-le-saviez-pas-1192406">
                                                Canada : To many Talents !!
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" href="https://media-exp1.licdn.com/dms/image/C5603AQGXzlQUgfIsoA/profile-displayphoto-shrink_200_200/0/1560400258476?e=1623888000&v=beta&t=IV8tUujGvsEcpv6RJR0Zaj-tai3adnQn8cIUj2HZj1w">
                                                Canada : So Hot !!!
                                            </a>
                                        </li>
                                    </ul>
                                </li>
                            {% endif %}
                        </ul>
                    </nav>
                </div>
            </div>
        </nav>
    </header>
                    </ul>
                    {% if app.user %}
                        <div class="row mr-5">
                            <p class="text-white mr-3 mt-2">Your are connected as : {{ app.user.username }}</p>
                            <div class="dropdown">
                                <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false" id="menu">
                                    <img src="/images/users/{{ app.user.filename }}" alt="profilePic" id="picPlanner">
                                </a>
                                <div class="dropdown-menu dropdown-menu-right">
                                    <a class="dropdown-item" href="{{ url("user_my_profile")}}">Update my profile</a>
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item" href="{{ url("app_logout") }}">Logout</a>
                                </div>
                            </div>
                        </div>
                    {% else %}
                        <div class="row mr-5">
                            <p class="text-white mr-3 mt-2">You are not connected</p>
                            <div class="dropdown">
                                <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false" id="menu">
                                    <img src="{{ asset('images/users/maple-syrup.png') }}" alt="profilePic" id="picPlanner">
                                </a>
                                <div class="dropdown-menu dropdown-menu-right">
                                    <a class="dropdown-item" href="https://www.voyagevoyage.ca/destinations/canada/raisons-canada-meilleur-pays-1.2126494">
                                        Why Canada ?
                                    </a>
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item" href="https://www.public.fr/News/Photos/Photos-50-stars-qui-sont-canadiennes-et-vous-ne-le-saviez-pas-1192406">
                                        Canada : To many Talents !!
                                    </a>
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item" href="{{ asset('images/users/1560400258476.jpeg') }}">
                                        Canada : So Hot !!!
                                    </a>

                                </div>
                            </div>
                        </div>

                    {% endif %}
                </div>
            </nav>
        </header>

        {% for status, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{status}} alert-dismissible fade show text-center my-2 mx-5" role="alert">
                    {{ message }}
                    <button type="button" class="close" data-bs-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            {% endfor %}
        {% endfor %}

        <div class="jumbotron container-fluid p-0 mb-0">
            <div class="row">
                {% block home %}{% endblock %}
            </div>
        </div>
        <section class="container-fluid my-4">
            <div class="row">
                {% block body %}{% endblock %}
            </div>
        </section>
    <footer class="container-fluid py-4 pt-3">
            <div class="row">
                <div class="col-8 mx-auto">
                    <p><strong>Sortir.com</strong> est un projet réalisé au sein de &copy;ENI Ecole Informatique</p>
                    <p><strong>Team 6</strong> - Rose DORLEANS / Vincent LOREAU / Amaury PREVOST</p>
                    <p><strong>Avril 2021</strong></p>
                </div>
            </div>

    </footer>

