{% extends 'base.html.twig' %}

{% block title %}Outing cancellation{% endblock %}

{% block body %}

<div class="col-6 py-5 mx-auto text-center">

    <h1 class="h3 mb-3 font-weight-normal">
        Why do you want to cancel this outing ? <br>(<i>{{ outing.name }}</i>)
    </h1>


    {{ form_start(outingCancellationForm,
        {'attr': {'onsubmit' : "return confirm('Are you sure you want to cancel this outing ?');" }}) }}


    <div class="col">
        {{ form_widget(outingCancellationForm.cancelReason,
            {'attr': {'class': 'form-control m-1', 'placeholder' : 'Cancel reasons'}}) }}
    </div>


    <div class="row mt-3 d-flex justify-content-center">
        <input type="submit" value="Confirm cancellation" class="btn btn-lg btn-warning">
    </div>

    {{ form_end(outingCancellationForm) }}

</div>

{% endblock %}



